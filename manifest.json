{
  "manifest_version": 3,
  "name": "TradeFlow Ultra Sniper",
  "version": "2.1.0",
  "description": "Sniper ultra-rapide pour TradeFlow avec clic automatique sur bouton 3 SOL - by sworm",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "https://axiom.trade/*",
    "https://*.axiom.trade/*",
    "https://photon-sol.tinyastro.io/*",
    "https://*.photon-sol.tinyastro.io/*",
    "https://www.dexscreener.com/*",
    "https://*.dexscreener.com/*",
    "https://bullx.io/*",
    "https://*.bullx.io/*"
  ],
  "content_scripts": [{
    "matches": ["https://axiom.trade/*", "https://*.axiom.trade/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["injected.js"],
    "matches": ["https://axiom.trade/*", "https://*.axiom.trade/*"]
  }]
}